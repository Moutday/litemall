/* components/business/instruct_modal/index.wxss */
@import '../../../base.wxss';

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0,0,0,.7);
  opacity: 1;
  overflow: hidden;
  z-index: 888;
  color: #fff;
}

.modal-pop {
  position: fixed;
  top: 15%;  
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  /* height: 770rpx; */
  /* padding: 20rpx; */
  z-index: 999;
  /* background: #fff; */
  border-radius: 15rpx;
}

.instruct-img {
  width: 100%;
  height: 500rpx;
}

.instruct-text {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 70rpx;
  text-align: center;
}

.instruct-text text {
  display: block;
  margin: 0 auto;
  color: #FFC148;
}

.instruct-text image {
  position: absolute;
  right: 50rpx;
  top: -50rpx;
  width: 68rpx;
  height: 60rpx;
}

.instruct-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 150rpx;
}

.instruct-btn button {
  width: 250rpx;
  border-radius: 10rpx;
  background: #FFC148;
}
