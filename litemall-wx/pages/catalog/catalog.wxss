page {
  height: 100%;
}

.container {
  background: #f9f9f9;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search {
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #efeff4;
  display: flex;
  align-items: center;
}

.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .van-icon-search {
  line-height: 56rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  padding-left: 10rpx;
  font-size: 25rpx;
  color:#b2b2b2;
}
.title-v{
  color: #020202;
  font-size: 38rpx;
  font-weight: 550;
}
.title-sec{
  margin: 20rpx;
}
.notice_icon{
  width:25rpx;
  height:20rpx;
}
.addr{
  width: 70%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #999999;
}

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
  background: #f5f5f5;
}
.click-btn{
  font-size: 20rpx;
  margin-left: 30rpx;
  line-height: 30rpx;
}
.addr-sec{
  line-height: 60rpx;
  height: 60rpx;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #656565;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.catalog .nav .item.active {
  color: #ffffff;
  font-size: 33rpx;
  background: #778325;
  border-radius: 25rpx;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 0 30rpx 0 30rpx;
}

.banner {
  display: block;
  height: 222rpx;
  width: 100%;
  position: relative;
}

.banner .image {
  position: absolute;
  top: 30rpx;
  left: 0;
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}

.banner .txt {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 192rpx;
  line-height: 192rpx;
  width: 100%;
}

.catalog .hd {
  height: 45rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.catalog .hd .txt {
  font-size: 28rpx;
  text-align: center;
  color: #000000;
  padding: 0 10rpx;
  width: auto;
}

.catalog .hd .line {
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.catalog .bd .item {
  display: flex;
  height: 216rpx;
  width: 100%;
  margin-right: 34rpx;
}

.catalog .bd .item.last {
  margin-right: 0;
}

.catalog .bd .item .icon {
  height: 190rpx;
  width: 190rpx;
  margin-right: 13rpx;
}

.desc{
  line-height: 50rpx;
}
.add_icon{
  height: 40rpx;
  width: 40rpx;
  margin-left:23%
}
.money{
  display: flex;
}

.catalog .bd .item .txt {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #000000;
  height: 40rpx;
  width: 144rpx;
}

.banner_top{
  height: 240rpx;
  width: 100%;
}
.tv{
  margin: 20rpx;
}
.menu_vip{
  height: 30rpx;
  width: 80rpx;
}