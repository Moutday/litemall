.container {
  background: #f5f5f5;
  height: auto;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.profile-info {
background-color: #fff;
color: #f4f4f4;
display: flex;
align-items: center;
padding: 30rpx;
font-size: 28rpx;
}

.profile-info .avatar {
height: 148rpx;
width: 148rpx;
border-radius: 50%;
}

.profile-info .info {
flex: 1;
height: 85rpx;
padding-left: 31.25rpx;
}

.profile-info .name {
display: block;
height: 45rpx;
line-height: 45rpx;
color: #000000;
font-size: 37.5rpx;
margin-bottom: 10rpx;
}

.profile-info .level {
display: block;
height: 30rpx;
line-height: 30rpx;
margin-bottom: 10rpx;
color: #7f7f7f;
font-size: 30rpx;
}

.crown_icon{
width: 40rpx;
height: 40rpx;
}
.upgrading_icon{
  margin-top:100rpx;
  width: 100%;
  height: 700rpx;
}
.integral_icon{
width: 40rpx;
height: 40rpx;
}